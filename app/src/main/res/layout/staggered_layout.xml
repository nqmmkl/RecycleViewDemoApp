<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/staggered_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/staggered_default"/>
    <LinearLayout
        android:id="@+id/staggered_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/staggered_ll_img"
            android:layout_width="@dimen/px_138"
            android:layout_height="@dimen/px_138"
            android:layout_marginTop="@dimen/px_30"
            android:background="@drawable/pic_default"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/staggered_ll_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/px_15"
            android:layout_marginBottom="@dimen/px_30"
            android:text="名字..."
            android:textColor="@color/text_color"
            android:textSize="@dimen/px_50"/>

    </LinearLayout>

</RelativeLayout>