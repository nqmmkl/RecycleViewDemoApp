<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.uichange.recycleviewdemo.RecycleViewDemoMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/btn_RecycleView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/item_btn_bg"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:text="RecycleView_Test"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/btn_xRecycleView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_50"
            android:background="@drawable/item_btn_bg"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:text="xRecycleView_Test"
            android:textAllCaps="false"
            />


    </LinearLayout>
</LinearLayout>
